<Messenger>:
    id: messenger
    orientation: 'horizontal'
    BoxLayout:
        canvas:
            Color:
                rgb: 0,1,1
            Rectangle:
                pos: self.pos
                size: self.size
        pos_hint: {'center_x': 1, 'center_y': 1}
        size_hint: 1, 1
        orientation: 'vertical'
        size_hint: .3, None
        MDTextField:
            hint_text: "Введите Ваши телефон*"
            mode: "rectangle"
            size_hint: .5, None
            pos_hint: {'center_x': .5, 'center_y': .5}

    BoxLayout:
        canvas:
            Color:
                rgb: 1,1,.9
            Rectangle:
                pos: self.pos
                size: self.size
        pos_hint: {'center_x': 1, 'center_y': 1}
        orientation: 'vertical'
        size_hint: .7, None
        MDTextField:
            hint_text: "222 Ваши телефон*"
            mode: "rectangle"
            size_hint: .5, None
            pos_hint: {'center_x': .5, 'center_y': .5}

Screen:
    name: 'body'
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.05
        Rectangle:
            pos: self.pos
            size: self.size
    NavigationLayout:
        x: screen_manager.height
        ScreenManager:
            id: screen_manager
            Screen:
                name: 'home'
                Messenger:
            Screen:
                name: 'registration'
                Registration:
            Screen:
                name: 'main'
                Main:
            Screen:
                name: 'settings'
