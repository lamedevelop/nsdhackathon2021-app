<Home>
    id: home_page
    orientation: 'vertical'
    Widget:
    Widget:
    BoxLayout:
        id: auth_form
        orientation: 'vertical'
        pos_hint: {'center_x': .5, 'center_y': .5}
        size_hint: .5, .5
        disable: True
        opacity: 0
        Widget:
            size_hint: None, None
            height: dp(20)
        MDTextField:
            hint_text: "E-mail"
            mode: "rectangle"
            size_hint: .5, None
            pos_hint: {'center_x': .5, 'center_y': .5}
        Widget:
            size_hint: None, None
            height: dp(20)
        MDTextField:
            hint_text: "Пароль"
            mode: "rectangle"
            size_hint: .5, None
            pos_hint: {'center_x': .5, 'center_y': .5}
        Widget:
            size_hint: None, None
            height: dp(20)
        MDRectangleFlatButton:
            text: 'Отправить данные'
            size_hint: .5, None
            pos_hint: {'center_x': .5, 'center_y': .5}
        Widget:
    BoxLayout:
        id: welcome_form
        orientation: 'vertical'
        pos_hint: {'center_x': .5, 'center_y': .5}
        size_hint: .5, .5
        MDCard:
            id: emodji
            size_hint: None, None
            size: dp(150), dp(150)
            border_radius: 100
            radius: [100]
            elevation: 0
            pos_hint: {'center_x': .5, 'center_y': .5}
            FitImage:
                source: 'templates/images/avatar.png'
        Widget:
            size_hint: None, None
            height: dp(20)
        MDRoundFlatButton:
            text: "Вход"
            text_color: 0, 0, 0, 1
            size_hint: 0.5, None
            size: dp(10), dp(40)
            pos_hint: {'center_x': .5, 'center_y': .5}
            on_release: root.animation_auth(welcome_form, auth_form)
        Widget:
            size_hint: None, None
            height: dp(20)
        MDFlatButton:
            text: "Регистрация"
            text_color: 0, 0, 0, 1
            size_hint: 0.5, None
            size: dp(10), dp(40)
            pos_hint: {'center_x': .5, 'center_y': .5}
            on_release: app.go_to_registration(root)

    Widget:

